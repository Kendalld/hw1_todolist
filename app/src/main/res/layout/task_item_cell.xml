<?xml version="1.0" encoding="utf-8"?>
<!-- task_item_cell.xml: Defines how each task item should look in the list.
     Getting this right is key for a usable interface. Each element must be placed thoughtfully. -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <EditText
        android:id="@+id/etTaskTitle"
        android:layout_width="262dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:hint="NAME"
        android:minHeight="48dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/etTaskDesc"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTaskTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-2dp"
        android:hint="TASK"
        android:minHeight="48dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDueTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/etTaskTitle"

        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivTaskAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivDeleteTask"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="62dp"
        android:contentDescription="@string/action_description"
        android:src="@drawable/ic_action" />

    <ImageView
        android:id="@+id/ivDeleteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="26dp"
        android:layout_toRightOf="@id/etTaskDesc"
        android:contentDescription="@string/delete_task"
        android:src="@drawable/delete_24" />

</RelativeLayout>
